<table class ='table'>
  <tr>
    <th>User</th>
    <th>Amount</th>
    <th>Charge Date</th>
  </tr>
  <% expenses.each do |expense| -%>
    <tr>
      <td><%= expense.user.login %></td>
      <td class='money'><%= show_amount(expense) %></td>
      <td><%= expense.charge_date %></td>
    </tr>
  <% end -%>
</table>
