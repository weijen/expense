<div class="block">
  <div class="content clearfix">
    <h2><%= t(:account_setting) %></h2>
    <div class="inner">
      <% handicraft_form_for(@current_user,:html =>{:class => :form}) do |f| %>
        <p><%= f.text_field :login, :readonly => true, :label => User.human_attribute_name(:login) %></p>
        <%= render :partial => 'form', :locals => {:f =>f}  %>
        <% locale = [["繁體中文", "zh-TW"],["English", "en"]] -%>
        <p><%= f.select :locale, locale, :label => User.human_attribute_name(:locale) %></p>
        <div class="group navform">
          <%= f.submit 'Update' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
