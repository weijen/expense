<%= render :partial => 'groups' %>

<div class="block">
  <div class="content clearfix">
    <h2><%= t("welcome.new_expenses")%></h2>

    <div id = 'sub-navigation' class="nav clearfix">
      <%= render_list [
        link_to(t("welcome.joined_groups"), "/"),
        link_to(t("welcome.managed_groups"), "/welcome/managed"),
        link_to(t("welcome.my"), "/welcome/my")
      ], :class => 'menu' -%>
    </div>
    <br />
    <div class="inner grid_10 alpha">
      <table class ='table'>
        <tr>
          <th><%= Expense.human_attribute_name(:group) %></th>
          <th><%= Expense.human_attribute_name(:user) %></th>
          <th><%= Expense.human_attribute_name(:entry_date) %></th>
          <th><%= Expense.human_attribute_name(:amount) %></th>
        </tr>
        <% @expenses.each do |expense| -%>
          <tr>
            <td><%= link_to expense.group.short_name, group_path(expense.group) %></td>
            <td><%= expense.user.login %></td>
            <td><%= expense.entry_date %></td>
            <td class='money'><%= number_to_currency(expense.show_amount, :precision => 0, :unit => "") %></td>
          </tr>
        <% end -%>
      </table>
    </div>
  </div>
</div>


