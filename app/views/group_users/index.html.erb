<h1>All Followers</h1>

<table class='table'>
  <thead>
    <tr>
      <th>login</th>
      <th>relation</th>
    </tr>
  </thead>
  <tbody>
    <% @followers.each do |follower| -%> 
      <tr>
        <td><%= follower.login %></td>
        <td><%= follower.relation(@group) %></td>
      </tr>
    <% end -%>
  </tbody>
</table>
