<div class="block">
  <div class="content clearfix">
    <h2><%= t("expenses.edit") %> / <%= Group.human_name %>: <%= @group.name %></h2>
    <%= link_to "回到團體", group_path(@group), :class => 'back-button' %> <%= link_to "新增分類", new_tag_path(:group_id => @group.secret_id), :class => 'back-button' %>
    <div class="inner">
      <% handicraft_form_for([@group,@expense]) do |f| %>
        <%= render :partial => 'form', :locals => { :f => f, :tags => @tags, :kind => @kind }%>
        <%= f.submit t('update') %>
      <% end %>
    </div>
  </div>
</div>
