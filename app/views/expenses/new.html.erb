<div class="block">
  <div class="content clearfix">
    <h2><%= @kind == "income" ? t("expenses.add_income_expense") : t("expenses.add_outgoing_expense")%></h2>
    
    <div class="inner">
      <% handicraft_form_for(@expense) do |f| %>
        <%= render :partial => 'form', :locals => { :f => f, :groups => @groups, :tags => @tags, :kind => @kind }%>
        <%= f.submit t(:create), :id => 'confirm-button' %>
      <% end %>
    </div>
  </div>
</div>
