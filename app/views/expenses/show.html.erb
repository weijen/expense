<div class="block">
  <div class="content clearfix">
    <h2><%= t("expenses.show") %></h2>

    <div class="inner grid_10 alpha">
      <p>
      <b><%= Expense.human_attribute_name(:group) %>:</b>
      <%=h @expense.group.name %>
      </p>

      <p>
      <b><%= Expense.human_attribute_name(:user) %>:</b>
      <%=h @expense.user.login %>
      </p>

      <p>
      <b><%= Expense.human_attribute_name(:tag) %>:</b>
      <%=h @expense.tag.name %>
      </p>

      <p>
      <b><%= Expense.human_attribute_name(:amount) %>:</b>
      <%=h @expense.show_amount %>
      </p>

      <p>
      <b><%= Expense.human_attribute_name(:note) %>:</b>
      <%=h @expense.note%>
      </p>

      <p>
      <b><%= Expense.human_attribute_name(:entry_date) %>:</b>
      <%=h @expense.entry_date %>
      </p>

    </div>
  </div>
</div>

<%= link_to t(:edit), edit_expense_path(@expense), :id => 'back-button' %>


<% content_for :page_specific_javascript do-%>
  <%= javascript_include_tag 'jquery-ui/jquery.ui.widget',
                               'jquery-ui/jquery.ui.button',
                               :cache => 'all' %>
  <script type="text/javascript">
    $(function(){
        $("#back-button").button();
     });
</script>
<% end -%>
