<%= f.error_messages %>
<%= hidden_field_tag :kind, kind %>
<p><%= f.select(:group_id, groups.map{ |g| [g.short_name, g.id] }, :label => Expense.human_attribute_name(:group)) %></p>
<p><%= f.select(:tag_id, tags.map{ |tag| [tag.name, tag.id] }, :label => Expense.human_attribute_name(:tag)) %></p>
<p><%= f.text_field :amount, :label => Expense.human_attribute_name(:amount) %></p>
<p><%= f.text_field :note, :label => Expense.human_attribute_name(:note) %></p>
<p><%= f.date_select :entry_date, :label => Expense.human_attribute_name(:entry_date) %></p>
<p><%= f.select :currency_id, Currency.find(:all).map{ |c| [c.name, c.id] }, :label => Expense.human_attribute_name(:currency) %></p>
